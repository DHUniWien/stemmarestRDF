    ] ;
    sh:property [
        sh:path srest:authority ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path srest:emended ;
        sh:class srest:Reading ;
        sh:nodeKind sh:IRI ;
    ] ;
.


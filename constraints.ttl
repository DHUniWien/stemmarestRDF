        sh:datatype xsd:long ;
    ] ;
    sh:property [
        sh:path srest:joinPrior ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] ;
    sh:property [
        sh:path srest:joinNext ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] ;
    sh:property [
        sh:path srest:isLemma ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
    ] ;
